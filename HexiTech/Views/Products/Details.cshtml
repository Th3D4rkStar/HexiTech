@using HexiTech.Data.Models
@model HexiTech.Services.Products.Models.ProductDetailsServiceModel

@{
    ViewBag.Title = "Details";
}

@* TODO: Fix footer, change availability color, fix description select outline, recenter product image, add product summary property. *@

<h1>Details</h1>

<link href="//netdna.bootstrapcdn.com/bootstrap/3.0.1/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
<script src="//netdna.bootstrapcdn.com/bootstrap/3.0.1/js/bootstrap.min.js"></script>
<link href="~/css/ProductDetails.css" rel="stylesheet" type="text/css">
<script src="//code.jquery.com/jquery-1.11.1.min.js"></script>

<div class="container-fluid">
    <div class="content-wrapper">
        <div class="item-container">
            <div class="container">
                <div class="col-md-12">
                    <div class="product col-md-3 service-image-left">

                        <center>
                            <img class="card-img-top" src="@Model.ImageUrl">
                        </center>
                    </div>
                </div>

                <div class="col-md-7">
                    <div class="product-title">@Model.Brand @Model.Series @Model.Model</div>
                    <div class="product-summary">The Corsair Gaming Series GS600 is the ideal price/performance choice for mid-spec gaming PC</div>
                    <div class="product-rating"><i class="fa fa-star gold"></i> <i class="fa fa-star gold"></i> <i class="fa fa-star gold"></i> <i class="fa fa-star gold"></i> <i class="fa fa-star-o"></i> </div>
                    <hr>
                    <div class="product-price">$@Model.Price</div>
                    <div class="product-stock">
                        @if (Enum.GetName(@Model.Availability) == "Available")
                        {
                            @:Available!
                        }
                        else if (Enum.GetName(@Model.Availability) == "AtWarehouse")
                        {
                            @:In stock at warehouse. Longer delivery period.
                        }
                        else if (Enum.GetName(@Model.Availability) == "OutOfStock")
                        {
                            @:Currently out of stock.
                        }
                    </div>
                    <hr>
                    <div class="btn-group cart">
                        <button type="button" class="btn btn-success">
                            Add to cart
                        </button>
                    </div>
                    <div class="btn-group wishlist">
                        <button type="button" class="btn btn-danger">
                            Add to wishlist
                        </button>
                    </div>
                </div>
            </div>
        </div>
        <div class="container-fluid">
            <div class="col-md-12 product-info">
                <ul id="myTab" class="nav nav-tabs nav_tabs">

                    <li class="active"><a href="#service-one" data-toggle="tab">DESCRIPTION</a></li>
                    <li><a href="#service-two" data-toggle="tab">SPECIFICATIONS</a></li>
                    <li><a href="#service-three" data-toggle="tab">REVIEWS</a></li>

                </ul>
                <div id="myTabContent" class="tab-content">
                    <div class="tab-pane active" id="service-one">

                        <section class="container product-info">
                            @Model.Description
                        </section>

                    </div>
                    <div class="tab-pane " id="service-two">

                        <section class="container">
                            <h3>@Model.Brand @Model.Series @Model.Model Specifications:</h3>
                            @Model.Specifications
                        </section>

                    </div>
                    <div class="tab-pane fade" id="service-three">

                    </div>
                </div>
                <hr>
            </div>
        </div>
    </div>
</div>